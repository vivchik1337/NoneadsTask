<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="DefText">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/DefTextColor</item>
        <item name="android:textSize">@dimen/DefTextSize</item>
        <item name="android:textColorHint">@color/HintTextColor</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="SmallText" parent="DefText">
        <item name="android:textSize">@dimen/SmallTextSize</item>
        <item name="android:textColor">@color/SmallTextColor</item>
    </style>

    <style name="SubTitleText" parent="DefText">
        <item name="android:textSize">@dimen/SubTitleTextSize</item>
        <item name="android:textColor">@color/SubTitleTextColor</item>
    </style>

    <style name="TitleText" parent="DefText">
        <item name="android:textSize">@dimen/TitleTextSize</item>
        <item name="android:textColor">@color/TitleTextColor</item>
    </style>


</resources>