<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pet_item_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgImageView"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_gravity="top|center"
            android:layout_margin="16dp"
            android:src="@mipmap/ic_search"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTextView"
                style="@style/TitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:gravity="left|top"
                android:singleLine="true"
                android:text="Base Item Name"/>

            <TextView
                android:id="@+id/infoTextView"
                style="@style/DefText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:gravity="left|center"
                android:lines="3"
                android:text="Base Item Info Info Info Info Info Info Info Info Info Info Info Info Info Info Info Info Info Info Info Info Info Info Info Info Info Info Info Info Info Info Info "/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:background="@null"/>

</LinearLayout>